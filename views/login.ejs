<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./assets/cms-style.css">
    <style>
         .btns{
            height: 10%;
            width: 50%;
            font-size: 1.1rem;
        }
        input{
            font-size: 1.1rem;
            width: 80%;
            height: 5%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Enter your username and password to login</h1>
    </header>
    <div id="wrapper">
        <div id="container">
            <div id="response">asdfasdf</div>
            <form id="add-book-form">
                <input type="text" id="username" placeholder=" Username">
                <input type="password" id="password" placeholder=" Password">
                <button type="submit" class="btns" onclick="login(event)">Log In</button>
            </form>
        </div>
    </div>
    <script>
        const login = e => {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const everyFieldIsFilled = username && password;

            if(everyFieldIsFilled){
                const user = {
                    username, 
                    password
                };
                
                const options = {
                    method: 'POST', 
                    headers: {
                        'Content-Type': 'application/JSON'
                    },
                    body: JSON.stringify(user)
                };

                fetch('/login', options);
            }
            else
                displayMessage("Please fill in all the input fields to proceed"); 
        }

        const displayMessage = messaage => {
            const response = document.getElementById('response');
            response.innerHTML = `<strong>P${message}</strong>`;        
            setTimeout(() => {
                response.innerHTML = "";
            }, 3000);
        }
    </script>
</body>
</html>