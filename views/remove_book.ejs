<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remove Book</title>
    <link rel="stylesheet" href="./assets/cms-style.css">
    <style>
        .btns{
            height: 10%;
            width: 50%;
            font-size: 1.1rem;
        }
        input{
            font-size: 1.1rem;
            width: 80%;
            height: 5%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Remove Book</h1>
    </header>
    <div id="wrapper">
        <div id="container">
            <div id="response"></div>
            <form id="add-book-form">
                <input type="text" id="title" placeholder=" Book Title">
                <button type="submit" class="btns" onclick="removeBook(event)">Remove Book</button>
            </form>
        </div>
    </div>
    <script>
        const removeBook = e => {
            e.preventDefault();
            const title = document.getElementById('title').value;
            if(title){
                const book = {
                    title
                };
                const options = {
                        method: 'POST', 
                        headers: {
                            'Content-Type': 'application/JSON'
                        },
                        body: JSON.stringify(book)
                };
                fetch('/remove_book', options);
                displayMessage('Book Removed Successfully');
            }
            else
                displayMessage("Please fill in the input field to proceed");
        }

        const displayMessage = message => {
            const response = document.getElementById('response');
            response.innerHTML = `<strong>${message}</strong>`;        
            setTimeout(() => {
                response.innerHTML = "";
            }, 3000);
        }
    </script>
</body>
</html>