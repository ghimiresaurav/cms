<body>
    <header>
        <h1>Search a book</h1>
    </header>
    <div id="wrapper">
        <form id="search-book-form">
            <input type="text" id="title" placeholder=" Title">
            <button type="submit" class="btns" onclick="searchBook(event)">Search</button>
        </form>
        <table id="view-book-table">
            <thead>
                <td>Book id</td>
